{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "target": "es2016",                                  
    "module": "ES2015",                             
    "moduleResolution": "node", 
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "outDir": "./dist",
    "noEmit": false,
    "esModuleInterop": true,                           
    "strict": true,                    
    "skipLibCheck": true,
    "baseUrl": "./src/social-buttons",                        
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx"]
}
